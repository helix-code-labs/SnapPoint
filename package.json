{
  "name": "snappoints-monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "preview": "turbo preview --filter=@snappoints/landing",
    "build:landing": "pnpm --filter @snappoints/landing build",
    "deploy:landing": "pnpm build:landing && pnpm --filter @snappoints/landing cf:deploy",
    "deploy:landing:preview": "pnpm build:landing && pnpm --filter @snappoints/landing cf:deploy:preview",
    "deploy:landing:dry": "pnpm build:landing && pnpm --filter @snappoints/landing cf:dry",
    "build:customer": "pnpm --filter @snappoints/customer-liff build",
    "deploy:customer": "pnpm build:customer && pnpm --filter @snappoints/customer-liff cf:deploy",
    "deploy:customer:preview": "pnpm build:customer && pnpm --filter @snappoints/customer-liff cf:deploy:preview",
    "deploy:customer:dry": "pnpm build:customer && pnpm --filter @snappoints/customer-liff cf:dry",
    "build:merchant": "pnpm --filter @snappoints/merchant-web build",
    "deploy:merchant": "pnpm build:merchant && pnpm --filter @snappoints/merchant-web cf:deploy",
    "deploy:merchant:preview": "pnpm build:merchant && pnpm --filter @snappoints/merchant-web cf:deploy:preview",
    "deploy:merchant:dry": "pnpm build:merchant && pnpm --filter @snappoints/merchant-web cf:dry",
    "build:admin": "pnpm --filter @snappoints/admin-web build",
    "deploy:admin": "pnpm build:admin && pnpm --filter @snappoints/admin-web cf:deploy",
    "deploy:admin:preview": "pnpm build:admin && pnpm --filter @snappoints/admin-web cf:deploy:preview",
    "deploy:admin:dry": "pnpm build:admin && pnpm --filter @snappoints/admin-web cf:dry"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "turbo": "^2.5.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wrangler": "^4.66.0"
  }
}
